---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

const { title, albumTitle } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | kvibeshopcl</title>
		<ClientRouter />
	</head>
	<body class="bg-white min-h-screen antialiased">
		
	
		<header class="flex flex-col items-center pt-6 pb-2">
			<a href="/" class="transition hover:opacity-80">
				<img src="/logopng-pequeño.png" alt="Logo" class="logo-small mb-3" />
			</a>

			<nav class="text-[9px] md:text-[10px] uppercase tracking-[0.2em] text-gray-400 flex flex-wrap justify-center gap-1 px-4">
				<a href="/" class="hover:text-purple-600 transition-colors">Inicio</a>
				<span>/</span>
				<a href="/info" class="hover:text-purple-600 transition-colors">Información</a>
				
			</nav>
		</header>

		<slot />
	</body>
</html>

<style is:global>
	:root { --brand-purple: #2D0046; }
	html { font-family: 'Poppins', sans-serif; color: var(--brand-purple); }
	
	.logo-small {
		height: 60px; 
		width: auto;
	}

	@media (max-width: 768px) {
		.logo-small { height: 40px; }
	}
</style>